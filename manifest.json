{
    "name": "When2Meet Filler",
    "description": "Extension Test",
    "version": "10",
    "manifest_version": 3,
    "background": {
        "service_worker": "module.js",
        "type": "module"
    },
    
    "compilerOptions": {
        "target": "es6"
    },
      
    "babel": {
        "presets": [
          "@babel/preset-env"
        ]
      },
    
    "eslintIgnore": [
        "test/**/*"
    ],
     

    "action":{
        "default_popup": "index.html",
        "default_title": "When2Meet Filler"
    },

    "content_scripts": [
        {
          "js": ["edit.js"],
          "matches": ["https://www.when2meet.com/*"],
          "type": "module"
        }
    ],
    
    "scripts": {
        "start": "xt-build -e dev -w",
        "build": "xt-build -e prod",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test"
      }
      
}